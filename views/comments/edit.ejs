<%- include ("../partials/header.ejs") %>

<section id="edit-comment" class="add-edit-comments">
  <div class="jumbotron text-center style-jumbotron bg-white">
    <h1>Edit Your Question</h1>
  </div>
  
  <div class="container">
    <div class="row">
      <form method="POST" action="/productsList/<%= product_id %>/comments/<%= comment._id %>?_method=PUT">
        <div class="form-group">
          <label for="comment">Question</label>
          <textarea name="comment[text]" id="comment" class="form-control"><%= comment.text %></textarea>
        </div>
        <button type="submit" class="main-button">Save</button>
      </form>
    </div>
  </div>
  
</section>

