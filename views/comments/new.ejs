<%- include ("../partials/header.ejs") %>

<section id="new-comment">
  <div class="jumbotron text-center style-jumbotron bg-white">
    <h1 class="display-4">Your Comment</h1>
  </div>
  <div  class="add-edit-comments my-5">
    <div class="container">
      <div class="row my-2">
        <form method="POST" action="/productsList/<%= product._id %>/comments">
          <div class="form-group">
            <label for="comment">Comment</label>
            <textarea name="comment[text]" id="comment" class="form-control"></textarea>
          </div>
          <button type="submit" class="style-button inverted-button">Add Comment</button>
        </form>
      </div>
    </div>
  </div>

  
</section>

