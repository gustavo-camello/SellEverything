<%- include ("partials/header.ejs") %>

<header class="jumbotron text-center">
  <h1>Add the Product that you want to sell</h1>
</header>

<div class="container">
  <div class="row">
    <form style="margin: 0 auto; width: 40%;" method="POST" action="/productsList">
      <div class="form-group">
        <label for="name">Product Name</label>
        <input type="text" class="form-control" id="name" name="name">
      </div>
      <div class="form-group">
        <label for="img">Image URL</label>
        <input type="text" class="form-control" id="img" name="img">
      </div>
      <button type="submit" class="btn btn-primary btn-block" style="width: 40%; margin: 0 auto;">Add Product</button>
    </form>
  </div>
</div>

<%- include ("partials/footer.ejs") %>



<a href="/productsList">Go back</a>