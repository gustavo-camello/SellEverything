<%- include ("../partials/header.ejs") %>

<section id="add-product">
  <div class="jumbotron jumbotron-fluid text-center style-jumbotron bg-white">
    <h1 class="display-4">Add Your Product</h1>
  </div>
  
  <div class="add-edit-product my-3">
    <div class="container">
      <div class="row my-5">
        <form method="POST" action="/productsList">
          <div class="form-group">
            <label for="name">Product Name</label>
            <input type="text" class="form-control" id="name" name="name" required minlength="19" maxlength="34">
          </div>
          <div class="form-group">
            <label for="img">Image URL</label>
            <input type="text" class="form-control" id="img" name="img" required>
          </div>
          <div class="form-group">
            <label for="description">Description</label>
            <textarea name="description" id="description" class="form-control" required minlength="20"></textarea>
          </div>
          <button type="submit" class="style-button inverted-button" style="width: 40%; margin: 0 auto;">Add Product</button>
        </form>
      </div>
    </div>
  </div>
  
</section>


