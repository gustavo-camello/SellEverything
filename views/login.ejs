<%- include ('./partials/header.ejs') %>

<section class="login-signup">

  <div class="container">
    <span class="logo mb-4">SELLeverything</span>
    <h1 class="text-center">Login</h1>
    <form action="/login" method="POST">
      <div class="form-group">
        <label for="username">Username</label>
        <input type="text" class="form-control pt-3" id="username" name="username" placeholder="Enter username" required>
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" class="form-control pt-3" id="password" name="password" placeholder="Password" required>
      </div>
      <button type="submit" class="style-button main-button">Login</button>
      <small id="emailHelp" class="form-text text-muted mt-4"><a href="">Forgot the password?</a> </small>
    </form>
  </div>
  
</section>


